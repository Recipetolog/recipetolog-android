<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.screenViewDish.fragments.IngredientsAndRecipeInfoFragment">
    <data>
        <import type="android.view.View"/>

        <variable
            name="full_dish"
            type="ru.art241111.dish_recipes.data.FullDish" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TabHost
            android:id="@+id/tabHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    style="@android:style/Widget.Material.Light.TabWidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textDirection="locale" />
                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/tab1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_ingredients"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{full_dish.stringIngredients}"
                            android:textSize="18sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/tab2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_recipe_dish"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{full_dish.recipe}"
                            android:textSize="18sp"
                            />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>

    </LinearLayout>
</layout>
